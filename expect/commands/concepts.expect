proc findBestConcept { splunk_home login passwd index context scope field response} {
    send "$splunk_home/bin/splunk search 'index=$index | xsFindBestConcept $field IN $context IN $scope' -auth $login:$passwd -maxout 1 -header true -output table  \r"

    expect {
        timeout { send_user "\nTEST FAIL - xsFindBestConcept ($context $scope $field) - TIMEOUT" }
        "ERROR" { send_user "\nTEST FAIL - xsFindBestConcept ($context $scope $field) - ERROR" }
        "$response" { send_user "\nTEST PASS - xsFindBestConcept ($context $scope $field)" }
    }
}

