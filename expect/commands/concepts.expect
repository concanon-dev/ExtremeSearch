
proc createConcept { splunk_home login passwd context concept scope min max shape response} {
    send "$splunk_home/bin/splunk search '| xsCreateConcept $concept IN $context WITH max=$max min=$min shape=$shape scope=$scope' -auth $login:$passwd \r"

    expect {
        timeout { send_user "\nTEST FAIL - xsCreateConcept ($context $concept) - TIMEOUT" }
        "$response" { send_user "\nTEST PASS - xsCreateConcept ($context $concept)" }
    }
}

proc cloneConcept { splunk_home login passwd incontext inscope inconcept tocontext toscope toconcept response} {
    send "$splunk_home/bin/splunk search '| xsCloneConcept $inconcept FROM $incontext IN $inscope TO $toconcept FROM $tocontext IN $toscope' -auth $login:$passwd \r"

    expect {
        timeout { send_user "\nTEST FAIL - xsCloneConcept ($incontext $inscope $inconcept $tocontext $toscope $toconcept) - TIMEOUT" }
        "$response" { send_user "\nTEST PASS - xsCloneConcept ($incontext $inscope $inconcept $tocontext $toscope $toconcept)" }
    }
}

