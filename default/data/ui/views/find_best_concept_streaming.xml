<form>
  <label>Find Best Concept Via Search</label>
  <fieldset submitButton="false">
    <input type="text" token="presearch">
            <default></default>
            <label>Data Search</label>
            <seed></seed>
        </input>
        <input type="text" token="datafield">
            <default></default>
            <label>Field Name</label>
            <seed></seed>
        </input>
    <input type="radio" token="scope">
            <label>Select Context Scope</label>
            <choice value="1">Private</choice>
            <choice value="2">App</choice>
            <choice value="3">Global</choice>
        </input>
        <input type="dropdown" token="context" searchWhenChanged="true">
            <label>Context Name</label>
            <populatingSearch fieldForValue="context" fieldForLabel="context">
                | xsListContexts $scope$
            </populatingSearch>
        </input>
  </fieldset>
  <row>
    <table>
      <searchString>$presearch$
        | `find_best_concept($datafield$, $context$, $scope$)`
        | table results
        </searchString>
      <earliestTime>0</earliestTime>
    </table>
  </row>
</form>
