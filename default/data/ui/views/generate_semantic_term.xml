<form>
    <label>Generate Semantic Term</label>
    <fieldset>
        <html>
            <p style="padding-top: 20px">
Enter values in each field as necessary to generate the Semanitc Term
            </p>
        </html>
        <!-- 
             For each field, create a text box; 
             Upon first load, the box will be populated with '*'; 
             If user leaves the box empty, then search will use '*'; 
             All tokens will be followed by a *
          -->
        <input type="text" token="name">
            <default></default>
            <label>Semantic Term Name</label>
        </input>
        <input type="dropdown" token="shape">
            <default>pi</default>
            <label>Shape of Term</label>
            <choice value="decline">Decline</choice>
            <choice value="decrease">Decrease</choice>
            <choice value="growth">Growth</choice>
            <choice value="increase">Increase</choice>
            <choice value="pi">PI</choice>
            <choice value="trapezoid">Trapezoid</choice>
            <choice value="triangle">Triangle</choice>
        </input>
        <input type="text" token="datafield">
            <default></default>
            <label>Field to build Semantic Term for</label>
            <seed></seed>
        </input>
        <input type="text" token="min">
            <default>0</default>
            <label>Min Value</label>
            <seed>0</seed>
        </input>
        <input type="text" token="max">
            <default>0</default>
            <label>Max Value</label>
            <seed>0</seed>
        </input>
        <input type="text" token="count">
            <default>0</default>
            <label>Number of values</label>
            <seed>0</seed>
        </input>
        <input type="text" token="avg">
            <default>0</default>
            <label>Average</label>
            <seed>0</seed>
        </input><input type="text" token="stdev">
            <default>0</default>
            <label>Std. Deviation</label>
            <seed>0</seed>
        </input>
    </fieldset>

    <!-- 
         define master search template; leave time unbounded so that the time input can be used 
      -->
    <searchTemplate>
| xsGenerateContext name="$datafield$_$name$" terms="$name$" avg=$avg$ count=$count$ max=$max$ min=$min$ stdev=$stdev$ type=domain shape=$shape$
    </searchTemplate>

    <row>   
        <!-- 
             show results as a table 
          -->
        <chart>
            <title>Context</title>
            <option name="charting.chart">column</option>
            <option name="axisTitleX.text">buckets</option>
            <option name="axisTitleY.text">CIX</option>
        </chart>
    </row>
    <row>
        <table>
            <option name="showPager">true</option>
            <option name="count">20</option>
        </table>      
    </row>
</form>
